{% doc %}
  @prompt
    bio with image and text
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-bio-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-bio-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-bio-content-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.content_gap }}px;
    align-items: {{ block.settings.vertical_alignment }};
    flex-direction: {% if block.settings.image_position == 'left' %}row{% else %}row-reverse{% endif %};
  }

  .ai-bio-image-wrapper-{{ ai_gen_id }} {
    flex: 0 0 {{ block.settings.image_width }}%;
    max-width: {{ block.settings.image_width }}%;
  }

  .ai-bio-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    border-radius: {{ block.settings.image_border_radius }}px;
    display: block;
  }

  .ai-bio-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1 / 1;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-bio-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-bio-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 8px 16px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-bio-text-wrapper-{{ ai_gen_id }} {
    flex: 1;
    color: {{ block.settings.text_color }};
  }

  .ai-bio-name-{{ ai_gen_id }} {
    font-size: {{ block.settings.name_size }}px;
    font-weight: 600;
    margin: 0 0 {{ block.settings.spacing_after_name }}px;
    color: {{ block.settings.text_color }};
  }

  .ai-bio-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    margin: 0 0 {{ block.settings.spacing_after_title }}px;
    color: {{ block.settings.text_color }};
    opacity: 0.8;
  }

  .ai-bio-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    line-height: 1.6;
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-bio-content-{{ ai_gen_id }} {
      flex-direction: column;
      gap: {{ block.settings.mobile_gap }}px;
    }

    .ai-bio-image-wrapper-{{ ai_gen_id }} {
      flex: 0 0 100%;
      max-width: 100%;
    }

    .ai-bio-name-{{ ai_gen_id }} {
      font-size: {{ block.settings.name_size | times: 0.85 }}px;
    }

    .ai-bio-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.85 }}px;
    }

    .ai-bio-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-bio-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-bio-container-{{ ai_gen_id }}">
    <div class="ai-bio-content-{{ ai_gen_id }}">
      <div class="ai-bio-image-wrapper-{{ ai_gen_id }}">
        {% if block.settings.image %}
          <img
            src="{{ block.settings.image | image_url: width: 800 }}"
            alt="{{ block.settings.image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.image.width }}"
            height="{{ block.settings.image.height }}"
            class="ai-bio-image-{{ ai_gen_id }}"
          >
        {% else %}
          <div class="ai-bio-image-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
            <div class="ai-bio-empty-state-{{ ai_gen_id }}">
              Add a bio image
            </div>
          </div>
        {% endif %}
      </div>

      <div class="ai-bio-text-wrapper-{{ ai_gen_id }}">
        {% if block.settings.name != blank %}
          <h2 class="ai-bio-name-{{ ai_gen_id }}">{{ block.settings.name }}</h2>
        {% endif %}

        {% if block.settings.title != blank %}
          <p class="ai-bio-title-{{ ai_gen_id }}">{{ block.settings.title }}</p>
        {% endif %}

        {% if block.settings.description != blank %}
          <div class="ai-bio-description-{{ ai_gen_id }}">
            {{ block.settings.description }}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Bio",
  "settings": [
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "range",
      "id": "image_width",
      "min": 20,
      "max": 60,
      "step": 5,
      "unit": "%",
      "label": "Image width",
      "default": 40
    },
    {
      "type": "range",
      "id": "image_border_radius",
      "min": 0,
      "max": 50,
      "step": 5,
      "unit": "%",
      "label": "Image border radius",
      "default": 10
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "name",
      "label": "Name",
      "default": "Jane Doe"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Founder & CEO"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>With over 15 years of experience in the industry, I'm passionate about creating products that make a difference in people's lives.</p>"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "vertical_alignment",
      "label": "Vertical alignment",
      "options": [
        {
          "value": "flex-start",
          "label": "Top"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "flex-end",
          "label": "Bottom"
        }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "container_width",
      "min": 600,
      "max": 1400,
      "step": 100,
      "unit": "px",
      "label": "Container width",
      "default": 1200
    },
    {
      "type": "range",
      "id": "content_gap",
      "min": 20,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "Gap between image and text",
      "default": 60
    },
    {
      "type": "range",
      "id": "mobile_gap",
      "min": 10,
      "max": 60,
      "step": 5,
      "unit": "px",
      "label": "Mobile gap",
      "default": 30
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "name_size",
      "min": 20,
      "max": 60,
      "step": 2,
      "unit": "px",
      "label": "Name size",
      "default": 32
    },
    {
      "type": "range",
      "id": "title_size",
      "min": 14,
      "max": 30,
      "step": 2,
      "unit": "px",
      "label": "Title size",
      "default": 18
    },
    {
      "type": "range",
      "id": "description_size",
      "min": 14,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Description size",
      "default": 16
    },
    {
      "type": "range",
      "id": "spacing_after_name",
      "min": 0,
      "max": 40,
      "step": 4,
      "unit": "px",
      "label": "Spacing after name",
      "default": 8
    },
    {
      "type": "range",
      "id": "spacing_after_title",
      "min": 0,
      "max": 40,
      "step": 4,
      "unit": "px",
      "label": "Spacing after title",
      "default": 16
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background",
      "default": "#f6f5ed"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text",
      "default": "#241917"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "Top padding",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "Bottom padding",
      "default": 60
    }
  ],
  "presets": [
    {
      "name": "Bio"
    }
  ]
}
{% endschema %}

<div class="prose text-{{ block.settings.alignment }}">
  {{ block.settings.text }}
</div>

{% stylesheet %}
  .text-left {
    text-align: left;
  }

  .text-center {
    text-align: center;
  }

  .text-right {
    text-align: right;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Text",
  "settings": [
    { "type": "richtext", "id": "text", "label": "Text" },
    {
      "type": "select",
      "id": "alignment",
      "label": "Alignment",
      "options": [
        { "label": "Left", "value": "left" },
        { "label": "Center", "value": "center" },
        { "label": "Right", "value": "right" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Text",
      "settings": {
        "text": "<p>Hello, world!</p>",
        "alignment": "left"
      }
    }
  ]
}
{% endschema %}

<div class="section section-text-and-image">
  <div class="wrapper grid grid-cols-1 md:grid-cols-2 gap-8">
    <div class="flex flex-col gap-4 justify-between max-w-md">
      <div class="flex-1">
        {% render 'animated-heading', title: section.settings.title, class: 'h2 sticky top-20' %}
      </div>
      <div class="prose">
        {{ section.settings.text }}
      </div>
    </div>
    {% if section.blocks.size > 0 %}
      {% if section.blocks.size == 1 %}
        {% for block in section.blocks %}
          {% if block.type == 'image' and block.settings.image %}
            {% render 'responsive-image', image: block.settings.image, wrapper_class: 'w-full aspect-text-and-image relative rounded-lg overflow-hidden md:max-w-lg justify-self-center', image_class: 'object-cover absolute inset-0 w-full h-full' %}
          {% endif %}
        {% endfor %}
      {% else %}
        <div class="text-and-image-swiper">
          <div class="swiper-wrapper">
            {% for block in section.blocks %}
              {% render 'responsive-image', image: block.settings.image, wrapper_class: 'w-full aspect-text-and-image relative rounded-lg overflow-hidden md:max-w-lg swiper-slide', image_class: 'object-cover absolute inset-0 w-full h-full' %}
            {% endfor %}
          </div>
        </div>
      {% endif %}
    {% endif %}
  </div>
</div>

{% schema %}
  {
    "name": "Text and Image",
    "tag": "section",
    "disabled_on": {
      "groups": ["header", "footer"]
    },
    "class": "section section-text-and-image",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text"
      },
      {
        "type": "checkbox",
        "id": "reverse_order",
        "label": "Reverse Order",
        "default": false
      }
    ],
    "blocks": [
      {
        "type": "image",
        "name": "Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      }
    ]
  }
{% endschema %}

{% assign posts = blogs['posts'].articles | sort: 'published_at' | reverse %}

<div class='wrapper overflow-visible'>
  <div class="flex flex-col md:flex-row gap-4 h-full justify-between md:items-end pb-6">
      {% render 'animated-heading', title: section.settings.title, class: 'h2' %}
      {% render 'button', 
        button_text: section.settings.button_text,
        link: window.shopUrl | append: '/blogs/' | append: blog.handle,
        button_class: 'btn--outline'
      %}
  </div>
  <div class='featured-post-swiper'>
    <div class='swiper-wrapper'>
      {% for post in posts limit: 5 %}
        {% render 'blog-card', post: post, class: 'swiper-slide' %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Featured Posts",
    "tag": "section",
    "class": "section-featured-posts section overflow-hidden",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text"
      }
    ]
  }
{% endschema %}
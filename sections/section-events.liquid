<div class="wrapper">
  {% if section.settings.heading != blank %}
    {% render 'animated-heading', title: section.settings.heading, class: 'h2 text-center max-w-2xl mx-auto mb-12' %}
  {% endif %}

  <div class="grid gap-8 md:gap-12">
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'event_detail' %}
          <div
            class="event-card bg-white border border-gray-200 rounded-lg p-6 md:p-8 shadow-sm"
            {{ block.shopify_attributes }}
          >
            <div class="space-y-6">
              {% if block.settings.title != blank %}
                <h3 class="h3">{{ block.settings.title }}</h3>
              {% endif %}

              {% if block.settings.text_1_title != blank or block.settings.text_1 != blank %}
                <div class="space-y-2">
                  {% if block.settings.text_1_title != blank %}
                    <h4 class="font-semibold text-gray-900">{{ block.settings.text_1_title }}</h4>
                  {% endif %}
                  {% if block.settings.text_1 != blank %}
                    <div class="prose max-w-none">
                      {{ block.settings.text_1 }}
                    </div>
                  {% endif %}
                </div>
              {% endif %}

              {% if block.settings.text_2_title != blank or block.settings.text_2 != blank %}
                <div class="space-y-2">
                  {% if block.settings.text_2_title != blank %}
                    <h4 class="font-semibold text-gray-900">{{ block.settings.text_2_title }}</h4>
                  {% endif %}
                  {% if block.settings.text_2 != blank %}
                    <div class="prose max-w-none">
                      {{ block.settings.text_2 }}
                    </div>
                  {% endif %}
                </div>
              {% endif %}

              {% if block.settings.text_3_title != blank or block.settings.text_3 != blank %}
                <div class="space-y-2">
                  {% if block.settings.text_3_title != blank %}
                    <h4 class="font-semibold text-gray-900">{{ block.settings.text_3_title }}</h4>
                  {% endif %}
                  {% if block.settings.text_3 != blank %}
                    <div class="prose max-w-none">
                      {{ block.settings.text_3 }}
                    </div>
                  {% endif %}
                </div>
              {% endif %}

              {% if block.settings.text_4_title != blank or block.settings.text_4 != blank %}
                <div class="space-y-2">
                  {% if block.settings.text_4_title != blank %}
                    <h4 class="font-semibold text-gray-900">{{ block.settings.text_4_title }}</h4>
                  {% endif %}
                  {% if block.settings.text_4 != blank %}
                    <div class="prose max-w-none">
                      {{ block.settings.text_4 }}
                    </div>
                  {% endif %}
                </div>
              {% endif %}

              {% if block.settings.button_text != blank and block.settings.button_link != blank %}
                <div class="pt-2">
                  {% render 'button',
                    button_text: block.settings.button_text,
                    link: block.settings.button_link,
                    button_class: 'btn--outline'
                  %}
                </div>
              {% endif %}
            </div>
          </div>
      {% endcase %}
    {% endfor %}
  </div>
</div>


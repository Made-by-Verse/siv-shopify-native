{% assign product = all_products[section.settings.product] %}

<div class="color-{{ section.settings.color_scheme }} bg-primary text-contrast">
  <div class="wrapper">
    {% if section.settings.heading != blank %}
      {% render 'animated-heading', title: section.settings.heading, class: 'h2 text-center max-w-xl mx-auto mb-4' %}
    {% endif %}
    {% if product %}
      <div class="grid grid-cols-1 lg:grid-cols-3 items-center gap-4">
        <ul class="space-y-4 order-last md:order-first">
          {% for block in section.blocks %}
            <li class="">
              <h3 class="mb-2 font-semibold uppercase text-lg font-body tracking-wide">
                {{ block.settings.heading }}
              </h3>
              <p>{{ block.settings.text }}</p>
            </li>
          {% endfor %}
        </ul>
        {% if product.media.size > 0 %}
          {% if product.media[0] %}
            {% render 'responsive-image',
              image: product.media[0],
              width: 1000,
              height: 1000,
              image_class: 'object-cover absolute inset-0 h-full w-full',
              wrapper_class: 'aspect-portrait relative w-full h-full rounded-md overflow-hidden'
            %}
          {% endif %}
        {% endif %}
        <div class="space-y-4">
          <div>
            <h3
              class="h3"
              x-data="{ shown: false }"
              x-intersect:enter="shown = true"
              x-intersect:leave="shown = false"
              :class="shown ? 'opacity-100 translate-y-0' : 'opacity-0 translate-y-8'"
            >
              {{ product.title }}
            </h3>
            {% if section.settings.button_text != blank %}
              {% render 'price', product: product, show_compare_at_price: true %}
            {% endif %}
          </div>
          <p>{{ section.settings.description | default: product.metafields.product['short-description'] }}</p>
          {% if section.settings.button_text != blank %}
            {% render 'button',
              button_text: section.settings.button_text,
              link: product.url,
              button_class: 'btn--black'
            %}
          {% endif %}
        </div>
      </div>
    {% else %}
      <div class="text-center">
        <p>Please select a product</p>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Featured Product",
  "tag": "section",
  "class": "section-featured-product  section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "product",
      "id": "product",
      "label": "Product"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "View Product"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    }
  ],
  "blocks": [
    {
      "type": "feature_point",
      "name": "Feature Point",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured Product",
      "settings": {
        "heading": "Featured Product"
      },
      "blocks": [
        {
          "type": "feature_point",
          "settings": {
            "heading": "Feature Point 1",
            "text": "Feature Point 1 Text"
          }
        }
      ]
    }
  ]
}
{% endschema %}

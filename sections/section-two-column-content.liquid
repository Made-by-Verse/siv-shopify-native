        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    },
    {
      "type": "image_block",
      "name": "Image Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "select",
          "id": "aspect_ratio",
          "label": "Aspect Ratio",
          "options": [
            {
              "value": "portrait",
              "label": "Portrait"
            },
            {
              "value": "square",
              "label": "Square"
            },
            {
              "value": "landscape",
              "label": "Landscape"
            }
          ],
          "default": "portrait"
        }
      ]
    },
    {
      "type": "text_between",
      "name": "Text Between",
      "settings": [
        {
          "type": "richtext",
          "id": "sticky_text",
          "label": "Sticky Text"
        },
        {
          "type": "richtext",
          "id": "static_text",
          "label": "Static Text"
        }
      ]
    },
    {
      "type": "stockist_cta",
      "name": "Stockist CTA",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "drawer_button_text",
          "label": "Drawer Button Text"
        }
      ]
    },
    {
      "type": "wholesale_cta",
      "name": "Wholesale CTA",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "button_1_link",
          "label": "Button 1 Link"
        },
        {
          "type": "text",
          "id": "button_1_text",
          "label": "Button 1 Text"
        },
        {
          "type": "url",
          "id": "button_2_link",
          "label": "Button 2 Link"
        },
        {
          "type": "text",
          "id": "button_2_text",
          "label": "Button 2 Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Two Column Content",
      "settings": {
        "padding_top": "md",
        "padding_bottom": "md"
      }
    }
  ],
  "max_blocks": 2
}
{% endschema %}

        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Share your story, showcase products, or highlight key features with this versatile two-column layout.</p>"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text",

<div class="wrapper">
  <div class="grid md:grid-cols-3 mb-4 gap-4">
    <div>
      <div class="sticky top-24">
        {% render 'animated-heading', title: section.settings.heading, class: 'h2 text-balance' %}
        <div
          class="transition-opacity duration-2500 ease-in-out prose"
          x-data="{ shown: false }"
          x-intersect:enter="shown = true"
          x-intersect:leave="shown = false"
          :class="shown ? 'opacity-100' : 'opacity-0'"
        >
          {{ section.settings.description }}
        </div>
      </div>
    </div>
    <div class="md:col-start-2 md:col-span-2 grid gap-4">
      {% for block in section.blocks %}
        <div class="grid md:grid-cols-2 gap-4">
          {% render 'responsive-image',
            image: block.settings.image,
            wrapper_class: 'relative rounded-lg',
            image_class: 'w-full'
          %}
          <div>
            <h3 class="text-lg uppercase font-body tracking-wide font-semibold mb-2">
              {{ block.settings.heading }}
            </h3>
            <div class="prose text-balance">
              {{ block.settings.text }}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Ingredients",
  "tag": "section",
  "class": "section-ingredients section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    }
  ],
  "blocks": [
    {
      "type": "ingredient",
      "name": "Ingredient",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Ingredients",
      "settings": {
        "heading": "Ingredients"
      }
    }
  ]
}
{% endschema %}

<div class="color-{{ section.settings.color_scheme }} overflow-hidden">
  <div class="wrapper grid grid-cols-1 md:grid-cols-2 gap-4">
    <div>
      {% if section.settings.heading != blank %}
        {% render 'animated-heading', title: section.settings.heading, class: 'h2 max-w-xl' %}
      {% endif %}
      {% if section.settings.description != blank %}
        <div class="prose max-w-md text-balance">{{ section.settings.description }}</div>
      {% endif %}
    </div>
    <div>
      {% if section.blocks.size > 0 %}
        {% assign available_products_count = 0 %}
        {% for block in section.blocks %}
          {% assign product = all_products[block.settings.product] %}
          {% if product %}
            {% assign available_products_count = available_products_count | plus: 1 %}
          {% endif %}
        {% endfor %}

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 hidden lg:grid">
          {% for block in section.blocks %}
            {% assign product = all_products[block.settings.product] %}
            {% if product %}
              <div
                {% if available_products_count == 1 %}
                  class="md:col-start-2"
                {% endif %}
                {{ block.shopify_attributes }}
              >
                {% render 'product-card', product: product, class_names: 'grid-tile' %}
              </div>
            {% endif %}
          {% endfor %}
        </div>

        <div class="block lg:hidden">
          <div class="swiper !overflow-visible">
            <div class="swiper-wrapper overflow-visible">
              {% for block in section.blocks %}
                {% assign product = all_products[block.settings.product] %}
                {% if product %}
                  <div class="swiper-slide" {{ block.shopify_attributes }}>
                    {% render 'product-card', product: product, class_names: 'grid-tile' %}
                  </div>
                {% endif %}
              {% endfor %}
            </div>
          </div>
        </div>
      {% else %}
        <div class="text-center">
          <p>Please add products to this section</p>
        </div>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Related Products",
  "tag": "section",
  "class": "section-related-products section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Related Products"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Related Products",
      "settings": {
        "heading": "Related Products"
      },
      "blocks": [
        {
          "type": "product",
          "settings": {}
        },
        {
          "type": "product",
          "settings": {}
        },
        {
          "type": "product",
          "settings": {}
        }
      ]
    }
  ]
}
{% endschema %}

{% assign current_url = request.path %}


{% case current_url %}
{% when '/policies/privacy-policy' %}
  {% assign title = shop.privacy_policy.title %}
  {% assign content = shop.privacy_policy.body %}
{% when '/policies/shipping-policy' %}
  {% assign title = shop.shipping_policy.title %}
  {% assign content = shop.shipping_policy.body %}
{% when '/policies/refund-policy' %}
  {% assign title = shop.refund_policy.title %}
  {% assign content = shop.refund_policy.body %}
{% when '/policies/terms-of-service' %}
  {% assign title = shop.terms_of_service.title %}
  {% assign content = shop.terms_of_service.body %}
{% when '/pages/wholesale-terms-and-conditions' %}
  {% assign title = pages['wholesale-terms-and-conditions'].title %}
  {% assign content = pages['wholesale-terms-and-conditions'].content %}
{% endcase %}

{% comment %} <div class="collection-header">
    <h1 class="h3 lg:col-span-2">{{ title }}</h1>
</div> {% endcomment %}

<div class="wrapper grid prose lg:grid-cols-2">
    <div class='grid items-start'>
        <div class='sticky top-20'>
            {% render 'animated-heading', title: title, class: 'h1 mb-4' %}
            {% comment %} <a href="/policies" class='text-sm tracking-wide font-medium uppercase text-black hover:opacity-70 opacity-100 duration-500'>Back to Policies</a> {% endcomment %}
        </div>
    </div>
    <div class="py-4">{{ content }}</div>
</div>

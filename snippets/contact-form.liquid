
<form class='contact-form max-w-p'>
  <div class=''>
    <label class='sr-only' for='name'>Name</label>
    <input type='text' id='name' name='name' placeholder='Name' required>
  </div>
  <div class=''>
    <label class='sr-only' for='name'>Name</label>
    <input type='email' id='email' name='email' placeholder='Email' required>
  </div>
  <div class=''>
    <label class='sr-only' for='name'>Name</label>
    <input type='text' id='phone' name='phone' placeholder='Phone' required>
  </div>
  <div class=''>
    <label class='sr-only' for='business'>Business Name</label>
    <input type='text' id='business' name='business' placeholder='Business Name' required>
  </div>

  <div class=''>
    <fieldset class='grid grid-cols-2 gap-2'>
      <legend class=''>Business Type</legend>
      <div class='flex items-center gap-4'>
        <div class='flex items-center gap-2'>
          <input type='radio' id='retail' name='business_type' value='retail' required>
          <label for='retail'>Retail</label>
        </div>
        <div class='flex items-center gap-2'>
          <input type='radio' id='wholesale' name='business_type' value='wholesale' required>
          <label for='wholesale'>Wholesale</label>
        </div>
      </div>
    </fieldset>
  </div>

  <div class=''>
    <label class='sr-only' for='message'>Message</label>
    <textarea id='message' name='message' placeholder='Message' required rows='5'></textarea>
  </div>
  <button class='btn btn--outline-primary' type='submit'>Send Enquiry</button>
</form>

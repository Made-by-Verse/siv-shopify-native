<h2
  x-data="
    {
      shown: false,
      words: [],
      initWords() {
              this.words = '{{ title | strip }}'.split(' ').map((word, index) => ({
        text: word,
        delay: index * 200,
        visible: false
      }));
      },
      showWords() {
        this.shown = true;
        this.words.forEach((word, index) => {
          setTimeout(() => {
            word.visible = true;
          }, word.delay);
        });
      },
      hideWords() {
        this.shown = false;
        this.words.forEach(word => {
          word.visible = false;
        });
      }
    }
  "
  x-init="initWords()"
  x-intersect.half:enter="showWords()"
  x-intersect.half:leave="hideWords()"
  class="{{ class }}"
  x-cloak
>
  <template x-for="(word, index) in words" :key="index">
    <span
      :class="word.visible ? 'opacity-100 translate-y-0' : 'opacity-0 translate-y-8'"
      class="inline-block transition-all duration-700 ease-out mr-2 last:mr-0"
      x-text="word.text"
    ></span>
  </template>
</h2>

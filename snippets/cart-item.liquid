<div class="flex gap-4 py-4">
    <img :src="item.image" class="aspect-square object-center w-24 h-24 border rounded md:w-28 md:h-28" />
  <div class="flex flex-col justify-between w-full flex-grow">
    <div class="flex w-full justify-between">
      <h3 class="text-2xl leading-none" x-text="item.title"></h3>
      <p class='leading-none' x-text="$store.cart.formatMoney(item.final_price)"></p>
    </div>
    <div class='flex gap-2'>
      <div class="flex items-center gap-2 border rounded">
        <button 
          class="quantity-btn minus h-10 w-10 flex items-center justify-center" 
          @click="$store.cart.updateQuantity(item.key, item.quantity - 1)"
        >-</button>
        <span 
          class="quantity-display leading-none text-center" 
          x-text="item.quantity"
        ></span>
        <button 
          class="quantity-btn plus h-10 w-10 flex items-center justify-center" 
          @click="$store.cart.updateQuantity(item.key, item.quantity + 1)"
        >+</button>
      </div>
      <button 
        class="uppercase text-sm border rounded opacity-70 hover:opacity-100 transition-opacity duration-500  w-10 h-10 flex items-center justify-center" 
        @click="$store.cart.removeFromCart(item.key)"
      >
        <span class='w-6 h-6 block'>{% render 'icon-trash' %}</span>
      </button>
    </div>
  </div>
</div> 